@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth/auth.css" asp-append-version="true"/>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card my-3">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Register</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Input your full name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Input your email">
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="Input your phone">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="position-relative password-container">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Input your password">
                                <i class="fa-solid fa-eye position-absolute end-0 top-50 translate-middle" style="cursor: pointer;"></i>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <div class="position-relative password-container">
                                <input type="password" class="form-control" id="confirm-password" name="confirm-password" placeholder="Input your confirm password">
                                <i class="fa-solid fa-eye position-absolute end-0 top-50 translate-middle" style="cursor: pointer;"></i>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mb-3">
                            <a asp-controller="Auth" asp-action="Login" class="">Đăng nhập</a>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" >Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth/auth.js"></script>
}